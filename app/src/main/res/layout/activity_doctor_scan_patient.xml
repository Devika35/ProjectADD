<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DoctorScanPatientActivity">

    <LinearLayout
        android:id="@+id/doctorrrrrr"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="25dp"
     >

        <TextView
            android:id="@+id/doctorPatient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="WELCOME ABOARD"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Here is every detail of patient you should know"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_marginBottom="22dp"/>

        <Button
            android:id="@+id/scanQRPatient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Scan QR of patient"
            android:textSize="25dp"
            android:layout_marginBottom="25dp"/>

        <TextView
            android:id="@+id/or"
            android:layout_width="46dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:text="OR"
            android:textColor="@color/black"
            android:textSize="20dp"

            />

        <EditText
            android:id="@+id/abhaId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="6dp"
            android:ems="10"
            android:hint="Enter ABHA-ID"
            android:textColorHint="@color/black"
            android:textSize="28dp" />

    </LinearLayout>

</LinearLayout>