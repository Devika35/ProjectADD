<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".DoctorScanPatientActivity">

    <LinearLayout
        android:id="@+id/doctorrrrrr"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="25dp"
     >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="WELCOME ABOARD"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:layout_marginBottom="50dp"/>


        <Button
            android:id="@+id/scanQRPatient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Scan QR of patient"
            android:textSize="25dp"
            android:layout_marginBottom="25dp"/>

        <TextView
            android:layout_width="46dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:text="OR"
            android:textColor="@color/black"
            android:textSize="20dp"

            />

        <EditText
            android:id="@+id/enterAbhaID"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginHorizontal="3dp"
            android:textColorHint="@color/black"
            android:ems="10"
            android:background="@color/white"
            android:layout_marginBottom="10dp"
            android:elevation="3dp"
            android:padding="15dp"
            android:textColor="@color/black"
            android:inputType="textPersonName"
            android:hint="Enter ABHA ID"
            android:textSize="20dp"
            />
    </LinearLayout>

</LinearLayout>