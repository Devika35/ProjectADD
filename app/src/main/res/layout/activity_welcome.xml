<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".WelcomeActivity"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="3dp"
        android:layout_marginTop="185dp"
        android:background="@color/white"
        android:elevation="6dp"
        android:orientation="vertical"
        android:padding="25dp">


        <EditText
            android:id="@+id/doctorWelcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="3dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="20dp"
            android:background="@color/white"
            android:elevation="3dp"
            android:ems="10"
            android:inputType="text"
            android:padding="15dp"
            android:text="@string/doctor"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <EditText
            android:id="@+id/patientWelcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="3dp"
            android:layout_marginBottom="24dp"
            android:background="@color/white"
            android:elevation="3dp"
            android:ems="10"
            android:inputType="text"
            android:padding="15dp"
            android:text="@string/patient"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/regName" />


        <EditText
            android:id="@+id/pharmacistWelcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="3dp"
            android:layout_marginBottom="2dp"
            android:background="@color/white"
            android:elevation="3dp"
            android:ems="10"
            android:inputType="text"
            android:padding="15dp"
            android:text="@string/pharmacist"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/regMobileNo" />

    </LinearLayout>


</LinearLayout>