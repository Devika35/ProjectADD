<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".SignUpPatientActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginHorizontal="2dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:elevation="6dp"
        android:orientation="vertical"
        >

     <TextView
         android:id="@+id/patientWelcome"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:textColorHint="@color/black"
         android:text="Welcome ABOARD"
         android:textStyle="bold"
         android:textColor="@color/black"
         android:textSize="20sp"
         />
        <TextView
            android:id="@+id/Details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/black"
            android:text="Enter your details"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginBottom="10dp"

            />


        <EditText
        android:id="@+id/patientName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="3dp"
        android:textColorHint="@color/black"
        android:hint="Name"
        android:ems="10"
        android:textColor="@color/black"
        android:inputType="text"
        android:textSize="30sp"
        android:elevation="3dp"
            android:layout_marginBottom="6dp"
        />
        <EditText
            android:id="@+id/patientMobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="3dp"
            android:textColorHint="@color/black"
            android:hint="Mobile No"
            android:textColor="@color/black"
            android:inputType="text"
            android:textSize="30sp"
            android:ems="10"
            android:elevation="3dp"
            android:layout_marginBottom="6dp"
             />
        <EditText
            android:id="@+id/patientAbhaId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="3dp"
            android:textColorHint="@color/black"
            android:hint="Abha Id"
            android:ems="10"
            android:textColor="@color/black"
            android:inputType="text"
            android:textSize="30sp"
            android:elevation="3dp"
            android:layout_marginBottom="6dp"
            />
        <EditText
            android:id="@+id/patientAge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="3dp"
            android:textColorHint="@color/black"
            android:hint="Age"
            android:elevation="3dp"
            android:textColor="@color/black"
            android:inputType="text"
            android:textSize="30sp"
            android:ems="10"
            android:layout_marginBottom="6dp"
            />
        <EditText
            android:id="@+id/patientSex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="3dp"
            android:textColorHint="@color/black"
            android:hint="Sex"
            android:elevation="3dp"
            android:textColor="@color/black"
            android:inputType="text"
            android:textSize="30sp"
            android:ems="10"
            android:layout_marginBottom="6dp"
            />
        <EditText
            android:id="@+id/patientPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="3dp"
            android:textColorHint="@color/black"
            android:hint="Password"
            android:elevation="3dp"
            android:textColor="@color/black"
            android:inputType="textPassword"
            android:textSize="30sp"
            android:ems="10"
            android:layout_marginBottom="6dp"
            />
        <EditText
            android:id="@+id/patientResidence"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="3dp"
            android:textColorHint="@color/black"
            android:hint="Residence"
            android:textColor="@color/black"
            android:inputType="text"
            android:elevation="3dp"
            android:textSize="30sp"
            android:ems="10"
            android:layout_marginBottom="6dp"
            />
    </LinearLayout>

    <Button
        android:id="@+id/patientSignup"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:text="Sign Up"
        android:textColor="@color/black"
        android:textSize="25sp"
       />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

    <TextView
        android:id="@+id/exsist"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textColorHint="@color/black"
        android:text="Already have an account?"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginBottom="12dp"

        />
    <TextView
        android:id="@+id/loginPatient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/black"
        android:text="Log in"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginBottom="12dp"

        />

        </LinearLayout>

</LinearLayout>


